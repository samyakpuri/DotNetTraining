<Window x:Class="MvvmDay2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MvvmDay2.Views"
        xmlns:viewmodels="clr-namespace:MvvmDay2.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <viewmodels:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource MainViewModel}">
        <views:HeaderView Margin="101,10,120,220" DataContext="{Binding Header}"/>
        <views:PersonView Margin="101,105,120,36" DataContext="{Binding Person}"/>
    </Grid>
</Window>
